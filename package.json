{
  "name": "rpjs-bot",
  "version": "1.0.0",
  "description": "bot no discord com as funcionalidades rpjs",
  "main": "./src/index.ts",
  "repository": "https://github.com/rp-js/rpjs-bot",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules .",
    "start": "ts-node .",
    "build": "tsc --build",
    "commit": "git-cz"
  },
  "dependencies": {
    "@discordjs/rest": "^1.0.1",
    "@types/node": "^18.6.2",
    "discord.js": "^14.0.3",
    "dotenv": "^16.0.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
